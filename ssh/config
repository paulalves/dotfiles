# ssh-keygen -t ed25519 -C "paulalves@protonmail.com"
# git clone ssh://git@paulalves.github.com/paulalves/repo
# gh repo clone paulalves.github.com/paulalves/repo 

Host paulalves.github.com
  HostName github.com
  IdentityFile ~/.ssh/paulalves_id
  IdentitiesOnly yes

